<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.View.Controller.LoginViewController"
            stylesheets="@../StyleSheets/LoginMenuStyle.css">
    <children>
        <AnchorPane layoutX="136.0" layoutY="23.0" prefHeight="354.0" prefWidth="328.0">
            <children>
                <TextField layoutX="64.0" layoutY="105.0" prefHeight="26.0" prefWidth="200.0" promptText="Username"
                        fx:id="usernameField"/>
                <PasswordField layoutX="64.0" layoutY="164.0" prefHeight="26.0" prefWidth="200.0" promptText="Password"
                        fx:id="passwordField"/>
                <Button layoutX="89.0" layoutY="222.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="66.0" text="Login"
                        onMouseClicked="#loginAction" fx:id="loginButton"/>
                <Button layoutX="173.0" layoutY="222.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="65.0" text="Register"
                        onMouseClicked="#registerAction" fx:id="registerButton"/>
                <Button layoutX="89.0" layoutY="268.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="149.0" text="Login as guest"
                        onMouseClicked="#guestLoginAction" fx:id="guestButton"/>
                <Label alignment="CENTER" layoutX="64.0" layoutY="33.0" prefHeight="45.0" prefWidth="200.0" text="Welcome to Atomic Bomber!" />
            </children>
        </AnchorPane>
        <Label layoutX="14.0" layoutY="368.0" prefHeight="18.0" prefWidth="158.0" text="A Patriot Pratorian Product @2024">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
    </children>
</AnchorPane>

