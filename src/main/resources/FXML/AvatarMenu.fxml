<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../StyleSheets/AllMenuStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.View.Controller.AvatarViewController">
    <AnchorPane>
        <ImageView fitHeight="900" fitWidth="1580" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Pics/mosayebGun.png" />
            </image>
        </ImageView>
    </AnchorPane>
    <AnchorPane prefHeight="889.0" prefWidth="1569.0">
        <children>
            <Button fx:id="backButton" layoutX="1408.0" layoutY="798.0" mnemonicParsing="false" onMouseClicked="#backAction" prefHeight="60.0" prefWidth="118.0" text="Back" />
            <Button fx:id="chooseLocalAvatarButton" layoutX="-1.0" layoutY="373.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="350.0" text="Choose Local Avatar">
                <font>
                    <Font size="18.0" />
                </font></Button>
            <Button fx:id="DropLocalAvatarButton" layoutX="-1.0" layoutY="493.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="361.0" text="Drag And Drop Avatar">
                <font>
                    <Font size="18.0" />
                </font></Button>
            <ImageView fx:id="avatar" fitHeight="150.0" fitWidth="150.0" layoutX="1335.0" layoutY="33.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="usernameLabel" alignment="CENTER" layoutX="1334.0" layoutY="202.0" prefHeight="44.0" prefWidth="150.0" text="Username" />
            <Button fx:id="chooseBelowAvatarButton" layoutY="60.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="455.0" text="Choose From Below Avatars">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
         <ImageView fx:id="f18Image" fitHeight="200.0" fitWidth="200.0" layoutX="45.0" layoutY="150.0" onMouseClicked="#chooseF18Avatar" pickOnBounds="true" preserveRatio="true" />
         <ImageView fx:id="f16Image" fitHeight="200.0" fitWidth="200.0" layoutX="295.0" layoutY="150.0" onMouseClicked="#chooseF16Avatar" pickOnBounds="true" preserveRatio="true" />
         <ImageView fx:id="f15Image" fitHeight="200.0" fitWidth="200.0" layoutX="545.0" layoutY="150.0" onMouseClicked="#chooseF15Avatar" pickOnBounds="true" preserveRatio="true" />
         <ImageView fx:id="eurotyphoonImage" fitHeight="200.0" fitWidth="200.0" layoutX="795.0" layoutY="150.0" onMouseClicked="#chooseEuroTyphoonAvatar" pickOnBounds="true" preserveRatio="true" />
        </children>
    </AnchorPane>

</StackPane>
